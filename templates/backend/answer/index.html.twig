{% extends 'backend_layout.html.twig' %}

{% block title %}Answer index{% endblock %}

{% block content %}
    <h1>Answer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

                {% for answer in question.answers %}
       <tr>
         
           <td>{{ answer.author }}</td>
           <td>{{ answer.body }}</td>
           <td>
                <a href="{{ path('backend_answer_show', {'id': answer.id}) }}">show</a>
                <a href="{{ path('backend_answer_edit', {'id': answer.id}) }}">edit</a>
            </td>


        </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_answer_new', {'id' : question.id}) }}">Create new</a>
{% endblock %}        
         
        

                            
                            
                                    
                                    
                                    
                                  
      