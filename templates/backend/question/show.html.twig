{% extends 'base.html.twig' %}

{% block content %}

    <h1 id="header-margin">{{ question.title }}</h1>

  

    <a href="{{ path('faq_index')}}">
        Retour a la liste de questions
            
        </a>

    <h2>
        le + de question 
    </h2>

    {% for tag in question.tag %}
    <h4>
        dans la categorie :  {{ tag.name }}
    </h4>
    {% endfor %}

    <p>{{ question.body }}</p>

    

    <h2 id="answer">les reponses </h2>
      
    <hr>

    <section>
            {% for answer in question.answers %}
           
        <div class="answer">
            <div class="row">
                <div class="col-3">
                    {{answer.author}}
                </div>
                <div class="col">
                    {{answer.body | raw}}

                </div>

            </div>


        </div>
            
        {% endfor %}

    </section>

    {{ include('backend/answer/new.html.twig') }}

{% endblock %}